<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mivyb_secondary"
    android:backgroundTint="@color/mivyb_secondary">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldMiddleName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/Middle_Name"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#000000"
        app:hintTextColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/textFieldFirstName"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/tvMiddleName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Middle_Name"
            android:textColor="#4C4C4C"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/tvMiddleName2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EDF4ED"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:text="MENDOZA"
            android:textColor="#0E0E0E"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldMobile"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:hint="@string/Mobile"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#000000"
        app:hintTextColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/textFieldMaidenName"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/tvMobile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/Mobile"
            android:textColor="#4C4C4C"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/tvMobile2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="#EDF4ED"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:text="09991234567"
            android:textColor="#0E0E0E"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldFacebookUrl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:hint="@string/Facebook_URL"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#000000"
        app:hintTextColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/textFieldEmail"
        tools:layout_editor_absoluteX="16dp">


        <TextView
            android:id="@+id/tvFacebookURL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Facebook_URL"
            android:textColor="#4C4C4C"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/tvFacebookURL2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EDF4ED"
            android:inputType="textWebEditText"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:text="https://web.facebook.com/123456789"
            android:textColor="#0E0E0E"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldFirstName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:hint="@string/First_Name"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#000000"
        app:hintTextColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/imgProfileNew"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/tvFirstName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/First_Name"
            android:textColor="#4C4C4C"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/tvFirstName2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EDF4ED"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:text="ARNEL"
            android:textColor="#0E0E0E"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldLastName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/Last_Name"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#000000"
        app:hintTextColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/textFieldMiddleName"
        tools:layout_editor_absoluteX="-4dp">


        <TextView
            android:id="@+id/tvLastName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Last_Name"
            android:textColor="#4C4C4C"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/tvLastName2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EDF4ED"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:text="SEBASTIAN"
            android:textColor="#0E0E0E"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldMaidenName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/Maiden_Name"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#000000"
        app:hintTextColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/textFieldLastName"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/tvMaidenName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Maiden_Name"
            android:textColor="#4C4C4C"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/tvMaidenName2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EDF4ED"
            android:hint="(if married)"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:text="(If Married)"
            android:textColor="#0E0E0E"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:hint="@string/Email"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#000000"
        app:hintTextColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/textFieldMobile"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/tvEmail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Email"
            android:textColor="#4C4C4C"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/tvEmail2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EDF4ED"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:text="MyEmailAddress@email.com"
            android:textColor="#0E0E0E"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imgGradPic"
        android:layout_width="126dp"
        android:layout_height="128dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toEndOf="@+id/imgProfileNew"
        app:layout_constraintTop_toTopOf="@+id/imgProfileNew"
        app:srcCompat="@drawable/profile_gradpic" />

    <ImageView
        android:id="@+id/imgProfileNew"
        android:layout_width="176dp"
        android:layout_height="212dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_modern" />

    //=============================


</androidx.constraintlayout.widget.ConstraintLayout>