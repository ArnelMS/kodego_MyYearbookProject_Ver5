<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YearbookProjectVer05" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mivyb_primary</item>
        <item name="colorPrimaryVariant">@color/mivyb_secondary</item>
        <item name="colorOnPrimary">@color/mivyb_tertiary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CECECE</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.YearbookProjectVer05.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YearbookProjectVer05.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YearbookProjectVer05.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>